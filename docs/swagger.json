        "models.UserResponse": {
            "type": "object",
            "properties": {
                "usr_email": {
                    "type": "string"
                },
                "usr_id": {
                    "type": "integer"
                },
                "usr_name": {
                    "type": "string"
                }
            }
        },
        "repositories.User": {
            "type": "object"
        }
